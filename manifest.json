{
  "name": "Corgi The News",
  "version": "0.1",
  "description": "Replace pictures on news websites with corgis.",
  "manifest_version": 2,
  "icons": {
    "16": "assets/images/2corgi16.png",
    "32": "assets/images/2corgi32.png",
    "48": "assets/images/2corgi48.png",
    "128": "assets/images/2corgi128.png"
  },
  "content_scripts": [{
      "matches": [
        "https://*.nytimes.com/*",
        "https://*.yahoo.com/*",
        "https://news.google.com/*",
        "https://*.huffpost.com/*",
        "https://*.cnn.com/*",
        "https://*.nytimes.com/*",
        "https://*.foxnews.com/*",
        "https://*.nbcnews.com/*",
        "https://*.dailymail.co.uk/*",
        "https://*.washingtonpost.com/*",
        "https://*.guardian.com/*",
        "https://*.wsj.com/*",
        "https://*.abcnews.go.com/*",
        "https://*.bbc.com/*",
        "https://*.usatoday.com/*",
        "https://*.latimes.com/*",
        "https://*.bloomberg.com/*",
        "https://*.slate.com/*",
        "https://*.newsweek.com/*",
        "https://*.independent.co.uk/*",
        "https://*.msnbc.com/*",
        "https://*.axios.com/*",
        "https://*.boston.com/*",
        "https://*.reuters.com/*",
        "https://*.thehill.com/*",
        "https://*.politico.com/*",
        "https://*.thedailybeast.com/*",
        "https://*.rollcall.com/*",
        "https://*.theatlantic.com/*"
      ],
      "all_frames": true,
      "js":      ["assets/js/contentScript.js"]
  }],
  "background": {
    "scripts": ["assets/js/background.js"],
    "persistent": false
  },
  "permissions": [
    "https://dog.ceo/*"
  ]
}